page{
  height: 100%;
}
.cates{
height: 100%;
}
 .cates_container {
   display: flex;
  height: calc(100vh - 90rpx);
}
.cates_container .left_menu{
  flex: 2;
  
}
.left_menu .menu_item{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.active{
  color:var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.right_content{
flex: 5;

}
.goods_list{
  display: flex;
 
  flex-wrap: wrap;
}
.right_content .goods_group .goods_title{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.right_content .goods_group .goods_title .delimiter{
color: #ccc;
padding: 0 10rpx;
}

.goods_list navigator{
  width: 33.33%;
  text-align: center;
}
.cates_container .right_content .goods_group .goods_title .goods_list navigator .image {
  width: 50%;
}
